<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<VBox fx:id="workSpaceWindow" alignment="TOP_CENTER" prefHeight="861.0" prefWidth="1103.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pluriverse.htmlgenerator.WorkSpaceController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <ScrollPane fx:id="scrollPane" prefHeight="800.0" prefWidth="1080.0">
        <VBox fx:id="contentArea" spacing="10.0"/>
    </ScrollPane>
    <HBox spacing="10.0">
        <Button text="Add Paragraph" onAction="#addParagraph"/>
        <Button text="Add Image" onAction="#addImage"/>
        <Button text="Add Title" onAction="#addTitle"/>
        <Button text="Add Subtitle" onAction="#addSubtitle"/>
        <Button text="Add Enumeration" onAction="#addEnumeration"/>
        <Button text="Generate HTML" onAction="#generateHtml"/>
    </HBox>
</VBox>
